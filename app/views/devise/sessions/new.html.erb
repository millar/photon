<div class="full-gradient">
  <div class="container text-center">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="modal show">
        <div class="embellishment">
          <a href="/"><i class="octicon octicon-device-camera"></i></a>
        </div>

        <div class="modal-dialog modal-sm">
          <div class="">
            <% flash.each do |type, message| %>
              <div class="alert <%= bootstrap_class_for(type) %>">
                <%= message %>
              </div>
            <% end %>
          </div>

          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Please login to continue</h4>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "Username/email" %>
              </div>

              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
              </div>

              <div class="form-group">
                <div class="row">
                  <div class="col-sm-8 text-left">
                    <% if devise_mapping.rememberable? -%>
                      <%= f.label :remember_me do %>
                        <%= f.check_box :remember_me %> Remember Me
                      <% end %>
                    <% end %>
                  </div>
                  <div class="col-sm-4">
                    <%= f.button "Log in", class: "btn btn-block btn-primary" %>
                  </div>
                </div>
              </div>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->
    <% end %>
  </div>
</div>



<%= render "devise/shared/links" %>
